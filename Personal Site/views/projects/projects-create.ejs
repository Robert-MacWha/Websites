<%- include('../partials/secondary-header.ejs') %>

<!--Form for creating a project-->
<div class="container mt-5">

    <form id="form" action="/portfolio/create" method="POST" enctype="multipart/form-data">

        <div class="form-group">
            
          <label for="title">Project Name</label>
          <input class="form-control" type="text" id="title" name="title">

        </div>
        <div class="form-check">

            <input class="form-check-input" type="checkbox" id="stared" name="stared">
            <label class="form-check-label" for="stared">Stared</label>

        </div>
        <div class="form-group">

            <label for="category">Project Category</label>
            <select class="form-control" id="category" name="category">
              <option>Article</option>
              <option>Deck</option>
              <option>Video</option>
              <option>Project</option>
              <option>Newsletter</option>
            </select>

        </div>
        <div class="form-group">

            <label for="content">Project Description</label>
            <textarea class="form-control" id="content" rows="3" maxlength=400 name="content"></textarea>

        </div>
        <div class="form-group">
            
            <label for="url">Project URL</label>
            <input class="form-control" type="text" id="url" name="url">
  
        </div>
        <div class="form-group">

            <label for="image">Project Cover</label>
            <input type="file" class="form-control-file" id="image" onchange="previewImage(event)">
            <img class="preview" alt="Image preview">

        </div>

        <button type="submit" class="btn btn-primary">Submit</button>

    </form>

</div>

<script src="../js/projects.js"></script>

