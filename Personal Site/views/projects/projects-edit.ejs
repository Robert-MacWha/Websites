<%- include('../partials/secondary-header.ejs') %>

<!--Form for creating a project-->
<div class="container mt-5 project-create-edit">

    <form id="form" action="/portfolio/<%= id %>" method="POST" enctype="multipart/form-data">

        <div class="form-group title">
            
          <label for="title">Project Name</label>
          <input class="form-control" type="text" id="title" name="title" value="<%= title %>">

        </div>
        <div class="form-check">

            <input class="form-check-input" type="checkbox" id="stared" name="stared" <% if (stared) { %> checked= <% } %>>
            <label class="form-check-label" for="stared">Stared</label>

        </div>
        <div class="form-group category">

            <label for="category">Project Category</label>
            <select class="form-control" id="category" name="category">
              <option <% if (category == 'article')    { %> selected <% } %>>Article</option>
              <option <% if (category == 'deck')       { %> selected <% } %>>Deck</option>
              <option <% if (category == 'video')      { %> selected <% } %>>Video</option>
              <option <% if (category == 'project')    { %> selected <% } %>>Project</option>
              <option <% if (category == 'newsletter') { %> selected <% } %>>Newsletter</option>
            </select>

        </div>
        <div class="form-group content">

            <label for="content">Project Description</label>
            <textarea class="form-control" id="content" rows="3" maxlength=400 name="content"><%= content %></textarea>

        </div>
        <div class="form-group url">
            
            <label for="url">Project URL</label>
            <input class="form-control" type="text" id="url" name="url" value="<%= url %>">
  
        </div>
        <div class="form-group image">

            <div class="row">

                <div class="col-auto w-fit">

                    <label for="image">Project Cover</label>
                    <input type="file" class="form-control-file" id="image" class="w-fit" name="image" onchange="previewImage(event)">

                </div>
                <div class="col">

                    <img class="preview" alt="Image preview" src="<%= image %>">

                </div>

            </div>

        </div>

        <button type="submit" class="btn btn-primary">Update</button>

    </form>

</div>

<script src="../js/projects.js"></script>

<%- include('../partials/footer.ejs') %>